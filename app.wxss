/**app.wxss**/
page{
  font-size: 30rpx;  
  background-color: #f2f2f2;
  color: #1b1b1b;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/* text  */
.tc{
  text-align: center;
}

/* flex  */
.flex-r-sb{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.flex-r-sa{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.flex-r-c{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.flex-r-fs{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.flex-r-fe{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.flex-c-sb{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.flex-c-sa{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.flex-c-c{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.flex-c-fs{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.flex-c-fe{
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}
