<!--pages/classify/classify.wxml-->

<scroll-view style="height: 100vh;" class="flex-c-fs" scroll-y="true" bindscroll="scroll">

  <!-- banner -->
  <view class='banner-container'>
    <swiper class='banner-wrap'
      indicator-dots="{{swiperInit.dots}}"
      indicator-color="{{swiperInit.dotsColor}}"
      indicator-active-color="{{swiperInit.dotsActiveColor}}"
      autoplay="{{swiperInit.autoplay}}"
      interval="{{swiperInit.interval}}"
      circular="{{swiperInit.circular}}"
      duration="{{swiperInit.duration}}"
    >
      <block wx:for="{{bannerList}}" wx:key="{{index}}">
        <swiper-item class='banner-item'>
          <image mode='aspectFill' src='{{imgUrl+item.adpic}}'></image>
        </swiper-item>
      </block>
    </swiper>
  </view>

  <!-- 占位块 -->
  <view wx:if="{{suck}}" class='placeholder'></view>

  <!-- 筛选 -->
  <view class='filter-wrap {{suck ? "suck" : ""}}'>
    <view class="flex-r-fs filter-item-container {{fold ? 'f-fold' : 'f-hidden'}} {{variety.length > 8 ? 'over' : 'un-over'}}">
      <view
        wx:for='{{variety}}'
        class='filter-item {{index == varietyIndex ? "active" : ""}}'
        wx:key='{{index}}'
        data-id="{{item.id}}"
        data-index="{{index}}"
        bindtap='chooseVariety'
      >{{item.name}}</view>
    </view>

    <view wx:if='{{variety.length>8}}' class="flex-r-c fold-wrap" bindtap='foldToggle'>
      <image wx:if='{{fold}}' mode="aspectFill" class="fold" src='../../images/fold.png'></image>
      <image wx:if='{{!fold}}' mode="aspectFill" class="fold" src='../../images/unfold.png'></image>
    </view>
  </view>

  <!-- 筛选结果 -->
  <view class='result-wrap'>
    <view class='item-container'
      wx:for='{{result}}'
      wx:key='{{index}}'
    >
      <view class='flex-r-sb result-item'>
        <image
          data-id='{{item.id}}'
          bindtap='toDetail'
          bindload='loadImage'
          lazy-load='{{true}}'
          class='cover'
          src='{{imgUrl+item.artpic}}'
        ></image>
        <view class='flex-c-sb des-wrap'>
          <view class='flex-c-fs des-top'
            data-id='{{item.id}}'
            bindtap='toDetail'
          >
            <view class='title'>{{item.name}}</view>
            <view class='des'>{{item.introduction}}</view>
          </view>
          <view class='flex-r-sb des-bottom'>
            <text class='price'>￥{{item.sell_price}}{{item.spec?'/'+item.spec:''}}</text>
            <view wx:if='{{item.size.length <= 0 || !item.size}}' class='flex-r-sb'>
              <image data-index='{{index}}' bindtap='reduceCount' class='count-btn' src='../../images/reduce2.png'></image>
              <view class='count'>{{item.count}}</view>
              <image data-index='{{index}}' bindtap='addCount' class='count-btn' src='../../images/add2.png'></image>
            </view>  
            <view data-index='{{index}}' bindtap='chooseSize' wx:if='{{item.size.length > 0}}' class='choose-size'>{{item.fold  ? '选规格' : '收起'}}</view>
          </view>
        </view>
      </view>

      <!-- 规格 -->
      <view class='flex-c-fs size' wx:if='{{item.size.length > 0 && !item.fold}}'>
        <view class='flex-r-sb size-item'
          wx:for='{{item.size}}'
          wx:for-item='size'
          wx:for-index='i'
          wx:key='{{i}}'
        >
          <text class='price'>￥{{size.sell_price}}/{{size.spec}}</text>
          <view class='flex-r-sb'>
            <image data-index='{{index}}' data-i='{{i}}' data-type='2' bindtap='reduceCount' class='count-btn' src='../../images/reduce2.png'></image>
            <view class='count'>{{size.count}}</view>
            <image data-index='{{index}}' data-i='{{i}}' data-type='2' bindtap='addCount' class='count-btn' src='../../images/add2.png'></image>
          </view>
        </view>
      </view> 
    </view>
    
    
  </view>
  
</scroll-view>

