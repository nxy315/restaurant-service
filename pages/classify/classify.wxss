/* pages/classify/classify.wxss */

/* Banner */
.banner-wrap{
  height: 200px;
}

.banner-item image{
  width: 100%;
  height: 100%;
}

/* 筛选 */
.filter-wrap{
  background-color: #fff;
  align-items: flex-start;
  position: relative;
  height: 144rpx;
  transform: translate3d(0, 0, 0);
}
.f-hidden{
  height: 144rpx;
  overflow: hidden;
}
.f-fold{
  height: auto;
}
.filter-item-container{
  position: absolute;
  flex: 1;
  flex-wrap: wrap;
  background-color: rgba(255, 255, 255, 0.9);
}
.filter-item-container.over{
  width: 680rpx;
}
.filter-item-container.un-over{
  width: 750rpx;
}
.filter-item{
  box-sizing: content-box;
  width: 25%;
  height: 72rpx;
  line-height: 72rpx;
  border-bottom: 1px solid #e4e4e4;
  text-align: center;
  font-size: 26rpx;
  color: #666666;
}

.filter-item.active{
  background-color: #fe4070;
  color: #fff;
}

.fold-wrap{
  position: absolute;
  right: 0;
  top: 0;
  padding-right: 20rpx;
  margin-top: 5rpx;
  width: 70rpx;
  height: 70rpx;
}
.fold{
  width: 35rpx;
  height: 35rpx;
}

/* 筛选结果 */
.result-wrap{
  flex: 1;
  background-color: #fff;
  min-height: 90vh;
}
.result-wrap .result-item{ 
  padding: 24rpx;
  height: 200rpx;
  border-bottom: 1px solid #e4e4e4;
}
.result-wrap .cover{
  margin-right: 24rpx;
  width: 200rpx;
  height: 200rpx;
  background-color: #f2f2f2;
  border-radius: 8rpx;
}
.result-wrap .des-wrap{
  flex: 1;
  height: 100%;
  align-items: flex-start;
}
.result-wrap .des-top{
  align-items: flex-start;
}
.result-wrap .des-top .title{
  margin-bottom: 5rpx;
  font-size: 24rpx;
}
.result-wrap .des-top .des{
  font-size: 20rpx;
  color: #a4a4a4;
}
.result-wrap .des-bottom{
  width: 100%;
}
.result-wrap .price{
  font-size: 30rpx;
  color: #fc3c6b;
}

.count-btn{
  width: 60rpx;
  height: 60rpx;
}
.count{
  margin: 0 15rpx;
  color: #fc3c6b;
}
.choose-size{
  margin-bottom: 2rpx;
  padding: 0 15rpx;
  width: 80rpx;
  height: 52rpx;
  line-height: 52rpx;
  font-size: 22rpx;
  color: #fe4070;
  border: 1rpx solid #fe4070;
  border-radius: 8rpx;
  text-align: center;
  font-weight: bold;
}


.size{}
.size-item{
  padding: 0 24rpx;
  width: 702rpx;
  height:  100rpx;
  background-color: #f5f5f5;
  border-top: 1rpx solid #eeeeee;
}