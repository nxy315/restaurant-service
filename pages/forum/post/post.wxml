<!--pages/forum/post/post.wxml-->
<view class='flex-c-fs input-wrap'>
  <textarea class='textarea' auto-height='{{true}}' style='width: 702rpx;' placeholder='请输入您要寻找的产品、服务等具体的要求'></textarea>
  <view class='flex-c-c camera-wrap' bindtap='showActionSheet'>
    <image src='../../../images/camera.png'></image>
    <view>上传图片</view>
  </view>
</view>

<view class='block'></view>

<view class='info-wrap'>
  <view class='title'>联系信息</view>
</view>

<view class='flex-r-sb address' bindtap='chooseAddress'>
  <view class='flex-r-fs'>
    <image class='arrow' src='../../../images/location.png'></image>
    <view class='flex-c-c address-info'>
      <view class='flex-r-fs address-title'>
        <view class='default'>默认</view>
        <view class='name'>试吃订单</view>
        <view class='tel'>17721140500</view>
      </view>
      <view class='adres'>上海市徐家汇1号线</view>
    </view>
  </view>
  
  <image class='arrow' src='../../../images/arrow_down.png'></image>
</view>

<view class='post' bindtap='post'>发布</view>