/* pages/home/home.wxss */

.search-wrap{
  padding: 0 20rpx;
  height: 80rpx;
  background-color: #fff;
}
.search-wrap .search-icon{
  width: 26rpx;
  height: 26rpx;
}
.search-wrap .search-input{
  flex: 1;
  padding: 0 14rpx;
  height: 52rpx;
  border: 1rpx solid #cccccc;
  border-radius: 26rpx;
}
.search-wrap .search-input .input-style{
  margin-left: 10rpx;
  font-size: 24rpx;
}
.search-wrap .search-btn{
  /* flex-shrink: 1; */
  margin-left: 50rpx;
  width: 128rpx;
  height: 54rpx;
  line-height: 54rpx;
  border-radius: 27rpx;
  background-color: #f0f0f0;
}
.search-wrap .search-btn text{
  margin-left: 5rpx;
  font-size: 22rpx;
}

/* 分类 */
.list-wrap{
  box-sizing: border-box;
  height: 386rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}
.banner-wrap{
  height: 100%;
}

.banner-item{
}
.page-wrap{
  padding-top: 25rpx;
  flex-wrap: wrap;
}
.item{
  margin-bottom: 25rpx;
  width: 25%;
}
.item image{
  margin-bottom: 15rpx;
  width: 90rpx;
  height: 90rpx;
  background-color: pink;
  border-radius: 50%;
}
.item text{
  font-size: 22rpx;
  color: #333333;
}

/* 结果列表 */
.top-types-wrap{
  margin-bottom: 15rpx;
  position: relative;
}
.top-types-item.active{
  color: #fff;
  background-color: #ff2e55;
}
.result-list{
  flex-wrap: wrap;
  padding: 0 2vw;
}
.result-swiper{
  height: 1000rpx;
}