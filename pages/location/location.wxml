<!--pages/location/location.wxml-->
<view>
  <view class='title'>当前位置</view>
  <view class='flex-r-sb handle-wrap'>
    <view class='text'>{{address}}</view>
    <view class='flex-r-c handle' bindtap='location'>
      <image src='../../images/nowlocation.png'></image>
      重新定位
    </view>
  </view>

  <view class='flex-r-sb address-wrap'>
    <view>选择地区</view>
    <view class='flex-r-fs'>
      <picker bindchange='chooseProvince' value='{{i1}}' range-key='shortname' range='{{province}}'>
        {{province[i1].shortname}}一
      </picker>
      <picker bindchange='chooseCity' value='{{i2}}' range-key='shortname' range='{{city}}'>
        {{city[i2].shortname ? city[i2].shortname : '请选择市'}}一
      </picker>
      <picker bindchange='chooseCounty' value='{{i3}}' range-key='shortname' range='{{county}}'>
        {{county[i3].shortname ? county[i3].shortname : '请选择区'}}
      </picker>
    </view>
  </view>

  <view class='button-primary' style='margin: 36rpx auto 0;width: 450rpx;' bindtap='chooseLocation'>确定</view>
</view>
