<!--pages/me/me.wxml-->
<view>

  <!-- 个人菜单  -->
  <view class='info-wrap'>

    <view class='flex-r-fs info-top'>
      <view class='flex-r-fs top-wrap'>
        <text class='user-name'>NXY</text>
        <view class='member'>普通会员</view>
      </view>
    </view>

    <view class='flex-r-fs info-bottom'>
      <view class='flex-c-c item'>
        <image></image>
        <text>常用清单</text>
      </view>
      <view class='flex-c-c item'>
        <image></image>
        <text>我的收藏</text>
      </view>
    </view>

    <view class='avatar'>
      <image></image>
    </view>
  </view>

  <!-- 订单  -->
  <view class='order-wrap'>
    <view class='flex-r-sb menu-item'>
      <view class='flex-r-c left'>
        <image></image>
        <text>我的订单</text>
      </view>
      <view class='flex-r-c right'>
        <text>查看我的全部订单</text>
        <image src='../../images/arrow_down.png'></image>
      </view>
    </view>

    <view class='flex-r-sb type-wrap'>
      <view class='flex-c-c type-item'>
        <image></image>
        <text>待付款</text>
      </view>
      <view class='flex-c-c type-item'>
        <image></image>
        <text>待发货</text>
      </view>
      <view class='flex-c-c type-item'>
        <image></image>
        <text>已完成</text>
      </view>
      <view class='flex-c-c type-item'>
        <image></image>
        <text>全部订单</text>
      </view>
    </view>
  </view>

  <!-- 余额  -->
  <view class='balance-wrap'>
    <view class='flex-r-sb menu-item'>
      <view class='flex-r-c left'>
        <image></image>
        <text>余额</text>
      </view>
      <view class='flex-r-c right'>
        <image src='../../images/arrow_down.png'></image>
      </view>
    </view>
  </view>

  <!-- 菜单  -->
  <view class='menu-wrap'>

    <view class='flex-r-sb menu-item'>
      <view class='flex-r-c left'>
        <image></image>
        <text class='tc'>收货地址</text>
      </view>
      <view class='flex-r-c right'>
        <image src='../../images/arrow_down.png'></image>
      </view>
    </view>

    <view class='flex-r-sb menu-item'>
      <view class='flex-r-c left'>
        <image></image>
        <text class='tc'>售后服务</text>
      </view>
      <view class='flex-r-c right'>
        <image src='../../images/arrow_down.png'></image>
      </view>
    </view>

    <view class='flex-r-sb menu-item'>
      <view class='flex-r-c left'>
        <image></image>
        <text class='tc'>意见反馈</text>
      </view>
      <view class='flex-r-c right'>
        <image src='../../images/arrow_down.png'></image>
      </view>
    </view>

    <view class='flex-r-sb menu-item'>
      <view class='flex-r-c left'>
        <image></image>
        <text class='tc'>退出登录</text>
      </view>
      <view class='flex-r-c right'>
        <image src='../../images/arrow_down.png'></image>
      </view>
    </view>

  </view>

</view>
