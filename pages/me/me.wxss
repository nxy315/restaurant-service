}
.type-item image{
  margin-bottom: 21rpx;
  width: 52rpx;
  height: 52rpx;
}
.menu-item{
  padding: 0 20rpx;
  height: 80rpx;
  border-bottom: 1rpx solid #e8e8e8;
}
.menu-item .left image{
  width: 45rpx;
  height: 45rpx;
  margin-right: 30rpx;
}
.menu-item .right text{
  margin-right: 15rpx;
  color: #8c8c8c;
}
.menu-item .right image{
  width: 45rpx;
  height: 45rpx;
}
