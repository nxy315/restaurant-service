/* pages/me/me.wxss */
.info-wrap, .order-wrap, .balance-wrap, .menu-wrap{
  margin-bottom: 27rpx;
  background-color: #fff;
}
.info-wrap{
  position: relative;
}
.info-wrap .avatar{
  position: absolute;
  left: 75rpx;
  bottom: 50rpx;
  width: 152rpx;
  height: 152rpx;
  overflow: hidden;
  border-radius: 50%;
}
.info-wrap .avatar image{
  width: 100%;
  height: 100%;
  background-color: pink;
}
.info-wrap .info-top{
  position: relative;
  padding-left: 245rpx;
  height: 170rpx;
  background-color: #ff3c77;
  color: #fff;
}
.info-wrap .info-top .top-wrap{
  position: absolute;
  left: 245rpx;
  bottom: 20rpx;
  font-size: 26rpx;
}
.info-wrap .info-top .top-wrap .user-name{
  margin-right: 15rpx;
}
.info-wrap .info-top .top-wrap .member{
  padding: 0 15rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 25rpx;
}
.info-wrap .info-bottom{
  padding-left: 245rpx;
  height: 122rpx;
  font-size: 28rpx;
  color: #5a5a5a;
}
.info-wrap .info-bottom .item{
  margin-right: 65rpx;
}
.info-wrap .info-bottom image{
  margin-top: 5rpx;
   margin-bottom: 10rpx; 
  width: 40rpx;
  height: 40rpx;
}
.type-wrap{
  padding: 0 40rpx;
  height: 168rpx;
  color: #4b4b4b;
}
