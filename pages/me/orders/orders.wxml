<view id='orders'>
  <!-- 状态栏 -->
  <view class='flex-r-sa top-types-wrap'>
    <view
      wx:for="{{types}}"
      wx:key="{{index}}"
      class="flex-r-c top-types-item {{currentType == index ? 'active' : ''}}"
      data-index='{{index}}'
