<!--pages/me/userinfo/userinfo.wxml-->
<view class='flex-c-fs wrap'>
  <view class='avatar-wrap'>
    <view class='flex-r-sb form-item avatar' bindtap='chooseAvatar'>
      <text class='name'>头像：</text>
      <image mode='aspectFill' src='{{cover}}'></image>
    </view>
    <view class='flex-r-sb form-item'>
      <text class='name'>昵称：</text>
      <input placeholder='默认微信昵称' value='{{ajaxData.nickname}}' data-key='nickname' bindinput='inputHandler' placeholder-style='font-size: 24rpx; color: #989898;'></input>
    </view>
  </view>

  <view class='info-wrap'>
    <view class='info-title' style='padding: 24rpx;font-weight: bold;'>联系信息</view>
    <view class='flex-r-sb form-item'>
      <text class='name'>姓名：</text>
      <input placeholder='2-6个汉字或字母' value='{{ajaxData.realname}}' data-key='realname' bindinput='inputHandler' placeholder-style='font-size: 24rpx; color: #989898;'></input>
    </view>
    <view class='flex-r-sb form-item'>
      <text class='name'>手机号码：</text>
      <input placeholder='请输入手机号码' value='{{ajaxData.tel}}' data-key='tel' bindinput='inputHandler' placeholder-style='font-size: 24rpx; color: #989898;'></input>
    </view>
    <view class='flex-r-sb form-item'>
      <text class='name'>公司名称：</text>
      <input placeholder='请输入您的公司/品牌/店铺' value='{{ajaxData.user_work}}' data-key='user_work' bindinput='inputHandler' placeholder-style='font-size: 24rpx; color: #989898;'></input>
    </view>
    <view class='flex-r-sb form-item'>
      <text class='name'>所在地：</text>
      <input placeholder='请输入您的经营所在地' value='{{ajaxData.address}}' data-key='address' bindinput='inputHandler' placeholder-style='font-size: 24rpx; color: #989898;'></input>
    </view>

    <view class='button-primary' style='margin: 90rpx auto 0;width: 450rpx;' bindtap='saveInfo'>保存</view>
  </view>
</view>

